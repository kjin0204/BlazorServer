@page "/counter"
@using System.Threading;
@inject BlazorApp.Data.CounterState CounterState

<h1>Counter</h1>

<p>Current count: @CounterState.Count</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-outline-secondary" @onclick="AutoIncrement">Auto Increment</button>

@code {
    //private int currentCount = 0;

    private void IncrementCount()
    {
        CounterState.Count++;
        //currentCount++;
    }

    void AutoIncrement()
    {
        var itmer = new Timer(x =>
        {
            InvokeAsync(() =>
            {
                IncrementCount();
                StateHasChanged();
            });
        },null,1000,1000);
    }
}
